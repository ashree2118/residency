{
  "compilerOptions": {
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/types/express.d.ts"
  ],
  "exclude": [
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}